unqualified-search-registries = ["docker.io"]

{% for registry in podman_upstream_registries -%}
[[registry]]
location = "{{ registry }}"

{% for mirror in podman_registry_mirrors -%}
[[registry.mirror]]
{% set prefix, domain = mirror.split('://') %}
location = "{{ domain }}"
{% if prefix == "http" %}
insecure = true
{% endif %}
{% endfor %}

{% endfor %}