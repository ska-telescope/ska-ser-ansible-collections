{
  "default-address-pools": [
    {
        "base": "172.21.0.0/16",
        "size": 24
    }
  ],
  {% if nexus|length > 1 and nexus_docker_group_port|length > 1 %}
  "registry-mirrors": ["http://{{ nexus }}:{{ nexus_docker_group_port }}"],
  {% endif %}
  "metrics-addr" : "0.0.0.0:{{ docker_metrics_port }}",
  {% if docker_mtu is defined %}
  "mtu" : {{ docker_mtu }},
  {% endif %}
  "experimental" : true,
  "log-driver": "json-file",
  "log-opts": {
      "max-size": "10m",
      "max-file": "3"
      },
{% if docker_activate_nvidia|bool and nvidia_driver_exists|bool %}
  "exec-opts": ["native.cgroupdriver=cgroupfs"],
    "default-runtime": "nvidia",
    "runtimes": {
        "nvidia": {
            "path": "/usr/bin/nvidia-container-runtime",
            "runtimeArgs": []
        }
    }
{% else %}
  "exec-opts": ["native.cgroupdriver=cgroupfs"]
{% endif %}
}
