          "min_age": "{{ logging_filebeat_cold_phase_age }}",
          "actions": {
            "migrate": {
              "enabled": false
            }
          }
        },
        "delete": {
          "min_age": "{{ logging_filebeat_delete_phase_age }}",
          "actions": {}
        }
      }
    }
