        "hot": {
          "min_age": "0ms",
          "actions": {
            "rollover": {
              "max_size": "{{ logging_filebeat_hot_phase_rollover_size }}",
              "max_age": "{{ logging_filebeat_hot_phase_rollover_age }}"
            }
          }
        },
        "warm": {
          "actions": {}
        },
