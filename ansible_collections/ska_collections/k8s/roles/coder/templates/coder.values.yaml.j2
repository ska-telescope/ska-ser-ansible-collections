coder:
  tls:
    secretNames:
      - coder-secrets
  env:
    - name: CODER_BROWSER_ONLY
      value: "true"
    - name: CODER_PG_CONNECTION_URL
      valueFrom:
        secretKeyRef:
          name: coder-db-url
          key: url
{% if reverseproxy_coder_server is not none %}
    - name: CODER_ACCESS_URL
      value: "https://k8s.stfc.skao.int"
    - name: CODER_OIDC_ISSUER_URL
      value: "https://gitlab.com"
    - name: CODER_OIDC_CLIENT_ID
      value: "{{ k8s_coder_gitlab_oidc_client_id }}"
    - name: CODER_OIDC_CLIENT_SECRET
      value: "{{ k8s_coder_gitlab_oidc_client_secret }}"
    - name: CODER_DISABLE_PASSWORD_AUTH
      value: "false"
{% endif %}
  service:
    enable: true
    type: LoadBalancer
    sessionAffinity: None

  ingress:
    # not possible to use a specific prefix
    enable: false

  serviceAccount:
    workspacePerms: false
