apiVersion: v1
kind: Secret
metadata:
  name: gitlab-runner-secret
  namespace: "{{ gitlab_runner_k8s_namespace }}"
type: Opaque
data:
  runner-registration-token: "{{ gitlab_runner_k8s_registration_token }}" #base64 encoded registration token
  runner-token: ""

---

apiVersion: v1
kind: Secret
metadata:
  name: s3access
  namespace: "{{ gitlab_runner_k8s_namespace }}"
type: Opaque
data:
  accesskey: "{{ gitlab_runner_k8s_s3_access_key_secret }}"
  secretkey: "{{ gitlab_runner_k8s_s3_secret_key_secret }}"
