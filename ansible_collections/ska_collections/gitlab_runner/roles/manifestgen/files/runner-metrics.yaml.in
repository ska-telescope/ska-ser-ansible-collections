---
apiVersion: v1
kind: Service
metadata:
  name: ${GITLAB_RUNNER_RELEASE}-metrics
  labels:
    app: ${GITLAB_RUNNER_RELEASE}-metrics
spec:
  type: NodePort
  ports:
  - name: metrics
    port: 9252
    targetPort: metrics
    # This should be the same in haproxy.cfg
    nodePort: ${GITLAB_RUNNER_METRICS_PORT}
  selector:
    app: ${GITLAB_RUNNER_RELEASE}-gitlab-runner
